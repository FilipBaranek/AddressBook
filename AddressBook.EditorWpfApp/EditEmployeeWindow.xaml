<Window x:Class="AddressBook.EditorWpfApp.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddressBook.EditorWpfApp"
        mc:Ignorable="d"
        Title="Zamestannec" Height="350" Width="310">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="5" Padding="6"  Text="Zamestnanec:" HorizontalAlignment="Left"/>
        <TextBox x:Name="nameTextBox"  Grid.Row="0" Margin="5" HorizontalAlignment="Right" Width="180"/>

        <TextBlock Grid.Row="1" Margin="5" Padding="6" Text="Funkcia:" HorizontalAlignment="Left"/>
        <TextBox x:Name="positionTextBox"  Grid.Row="1" Margin="5" HorizontalAlignment="Right" Width="180"/>

        <TextBlock Grid.Row="2" Margin="5" Padding="6" Text="Telefón:" HorizontalAlignment="Left"/>
        <TextBox x:Name="phoneTextBox"  Grid.Row="2" Margin="5" HorizontalAlignment="Right" Width="180"/>

        <TextBlock Grid.Row="3" Margin="5" Padding="6" Text="E-mail:" HorizontalAlignment="Left"/>
        <TextBox x:Name="emailTextBox"  Grid.Row="3" Margin="5" HorizontalAlignment="Right" Width="180"/>

        <TextBlock Grid.Row="4" Margin="5" Padding="6" Text="Miestnosť:" HorizontalAlignment="Left"/>
        <TextBox x:Name="roomTextBox"  Grid.Row="4" Margin="5" HorizontalAlignment="Right" Width="180"/>

        <TextBlock Grid.Row="5" Margin="5" Padding="6" Text="Hlavné pracovisko:" HorizontalAlignment="Left"/>
        <TextBox x:Name="mainWorkplaceTextBox"  Grid.Row="5" Margin="5" HorizontalAlignment="Right" Width="180"/>

        <TextBlock Grid.Row="6" Margin="5" Padding="6" Text="Pracovisko:" HorizontalAlignment="Left"/>
        <TextBox x:Name="workplaceTextBox"  Grid.Row="6" Margin="5" HorizontalAlignment="Right" Width="180"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" VerticalAlignment="Bottom"  HorizontalAlignment="Right">
            <Button Content="OK" Margin="5" Padding="35, 5" Click="Ok_Click"/>
            <Button Content="ZRUŠIŤ" Margin="5" Padding="21, 5" Click="Cancel_Click"/>
        </StackPanel>
        
    </Grid>

</Window>
